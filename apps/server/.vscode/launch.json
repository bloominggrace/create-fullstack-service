{
  "version": "0.0.1",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Nest:9229",
      "address": "localhost",
      "port": 9229,
      "restart": true,
      "timeout": 30000,
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "/usr/src/app"
    }
  ]
}
